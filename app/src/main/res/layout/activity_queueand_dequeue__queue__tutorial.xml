<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/riverscloud"
    tools:context=".QueueandDequeue_Queue_Tutorial">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:scrollbarSize="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:text="CONCHOATOC"
            android:textSize="20dp"
            android:id="@+id/textInScroll"/>
    </ScrollView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifQueue"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/scrollView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src='@drawable/tutorial_queue' />

    <Button
        android:id="@+id/start_button_queue"
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/start_button_resource"
        app:backgroundTint="@null" />
</RelativeLayout>