<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/riverscloud"
    tools:context=".Sort_Game_Tutorial">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textInScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONCHOATOC"
            android:textSize="18sp" />
    </ScrollView>

    <Button
        android:id="@+id/start_button_sort"
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/start_button_resource"
        app:backgroundTint="@null" />
</RelativeLayout>